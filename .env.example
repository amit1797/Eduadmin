# Copy this file to .env and fill in values
DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DBNAME
JWT_SECRET=replace-with-a-long-random-secret
JWT_REFRESH_SECRET=replace-with-a-long-random-refresh-secret
PORT=5000

# S3-compatible storage (AWS S3 or MinIO)
# Required: set these for document uploads to work
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
# For MinIO or other S3-compatible services, set endpoint and path style
# Example: https://play.min.io or http://localhost:9000
S3_ENDPOINT=
S3_FORCE_PATH_STYLE=true

# Credentials (do not commit your real values)
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# Optional: override public URL base if your bucket uses CDN/custom domain
# If unset, the server will derive a public URL from ENDPOINT/REGION
S3_PUBLIC_URL=
